{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2022",
        "allowJs": false,
        "declaration": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./src"
    },
	"include": [
		"src/**/*.ts"
    ],
	"exclude": [
		"node_modules/**"
	]
}